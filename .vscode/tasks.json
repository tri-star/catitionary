{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "compose up",
      "type": "shell",
      "command": "docker-compose up -d"
    },
    {
      "label": "bash app",
      "type": "shell",
      "command": "docker-compose exec app bash"
    },
    {
      "label": "yarn watch",
      "type": "shell",
      "command": "docker-compose exec app yarn watch"
    },
    {
      "label": "start-queue",
      "type": "shell",
      "command": "docker-compose exec app php artisan queue:listen --queue=batch --timeout=0"
    }
  ]
}
